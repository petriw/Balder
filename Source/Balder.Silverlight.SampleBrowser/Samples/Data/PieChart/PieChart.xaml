<Geometries:Geometry x:Class="Balder.Silverlight.SampleBrowser.Samples.Data.PieChart.PieChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:Geometries="clr-namespace:Balder.Core.Objects.Geometries;assembly=Balder.Core" 
    xmlns:Controls="clr-namespace:Balder.Silverlight.Controls;assembly=Balder.Silverlight" 
    >
	<Controls:NodesControl x:Name="NodesControl">
		<Controls:NodesControl.NodeTemplate>
			<DataTemplate>
				<Geometries:Cylinder Size="5" 
									 TopRadius="20"
									 BottomRadius="20"
									 StartAngle="{Binding StartAngle}" 
									 EndAngle="{Binding EndAngle}" 
									 Segments="16" />
			</DataTemplate>
		</Controls:NodesControl.NodeTemplate>
	</Controls:NodesControl>
</Geometries:Geometry>
